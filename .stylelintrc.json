{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended-vue"
  ],
  "rules": {
    "at-rule-no-unknown": [true, {
      "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen"]
    }],
    "custom-property-pattern": null,    
    "property-no-unknown": [true, {
      "ignoreProperties": ["--*"]        
    }]
  }
}